{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "ASLA Editor",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "all": true,
        "scope": ["http://localhost:8000/*"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/*", "$HOME/**", "$APPCONFIG/**"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPCONFIG/**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ch.asla.asla-editor",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "ASLA Editor",
        "url": "",
        "fullscreen": false,
        "height": 600,
        "minHeight": 300,
        "width": 800,
        "minWidth": 400,
        "resizable": true,
        "visible": false
      },
      {
        "label": "launch",
        "title": "launch",
        "url": "launch",
        "fullscreen": false,
        "height": 450,
        "width": 600,
        "resizable": false,
        "center": true,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "skipTaskbar": true,
        "decorations": false,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true
      },
      {
        "label": "welcome",
        "title": "Willkommen",
        "url": "launch/first",
        "fullscreen": false,
        "height": 300,
        "width": 400,
        "resizable": false,
        "center": true,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "skipTaskbar": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": true,
        "visible": false,
        "alwaysOnTop": true
      }
    ]
  }
}
